<ul>
  <% comments.each do |comment| %>
    <% unless comment.id.nil? %>
      <li>
        <p><%= comment.content %>
          <%= link_to [comment.citicize, comment], confirm: '本当に削除しますか？', method: :delete do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %> 
        </p>
      </li>
    <% end %>
  <% end %>
</ul>
