<h1>1~5の整数で評価して下さい</h1>
<%= form_with(model: @estimate, local: true, url: estimates_path) do |form| %>
<%= form.hidden_field :citicize_id %>
<%= form.hidden_field :user_id %>
<div class="form-group">
  <select class="form-control" id="rate" name="estimate[rate]">
    <option value='1'>★</option>
    <option value='2'>★★</option>
    <option value='3'>★★★</option>
    <option value='4'>★★★★</option>
    <option value='5'>★★★★★</option>
  </select>  
</div>

<%= form.submit "レビュー評価", :class => "btn btn-primary" %>
<% end %>
