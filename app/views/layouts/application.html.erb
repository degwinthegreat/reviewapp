            <ul class="nav navbar-nav">
              <li>
                <a href="/citicize/new">投稿する</a>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete, data: { confirm: 'ログアウトしますか？'} do %>
                <span>ログアウト</span>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </nav>
  </div>

    <%= yield %>

